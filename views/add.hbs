<h1>Add new course</h1>
{{#if error}}
  <p class="alert">{{ error }}</p>
{{/if}}

<form action="/add" method="post" novalidate>
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" value="{{ data.title }}" required>
    <label for="title">Course Title</label>
    <span class="helper-text" data-error="Enter the title"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" min="1" value="{{ data.price }}" required>
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="Enter the price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" value="{{ data.img }}" required>
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter the image url"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{ csrf }}">

  <button class="btn btn-primary">Add course</button>
</form>
