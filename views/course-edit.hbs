<h1>Edit {{ course.title }} course</h1>

<form action="/courses/edit" method="post" class="course-form" novalidate>
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{ course.title }}">
    <label for="title">Course Title</label>
    <span class="helper-text" data-error="Enter the title"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" min="1" required value="{{ course.price }}">
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="Enter the price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value="{{ course.img }}">
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter the image url"></span>
  </div>

  <input type="hidden" name="id" value="{{ course.id }}">
  <input type="hidden" name="_csrf" value="{{ csrf }}">

  <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="post">
  <input type="hidden" name="id" value="{{ course.id }}">
  <input type="hidden" name="_csrf" value="{{ csrf }}">
  <button type="submit" class="btn red">Remove course</button>
</form>
